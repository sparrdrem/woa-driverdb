[Version]
Signature="$Windows NT$"
Class=SDHost
ClassGUID={a0a588a4-c46f-4b37-b7ea-c82fe89870c6}
Provider=%ProviderString%
CatalogFile=bcm2836sdhc.cat
BootCritical=1

[SourceDisksNames]
3426=windows cd

[SourceDisksFiles]
bcm2836sdhc.sys		= 3426

; ///////////////////////////////////////////////////////////
;
;   List of manufacturers and devices
;
; ///////////////////////////////////////////////////////////

[Manufacturer]
%Generic%=Generic,NT$ARCH$

[ControlFlags]
BasicDriverOk=*
ExcludeFromSelect=ACPI\ARASAN
; ///////////////////////////////////////////////////////////
;
; Generic Device
;

[Generic.NT$ARCH$]
%ACPI\ARASAN.DeviceDesc%=SDHost, ACPI\ARASAN
; ///////////////////////////////////////////////////////////
;
; Non-Generic Devices
;
; Use Generic Device Description (%PCI\CC_080501.DeviceDesc%)to
; minimize localization.
;
; Otherwise, instances of %PCI\CC_080501.DeviceDesc% should be replaced by 
; %<SpecificID...>%
;

; ///////////////////////////////////////////////////////////
;
; Service install
;

[sdhc_Service_Inst]
ServiceType    = %SERVICE_KERNEL_DRIVER%
StartType      = %SERVICE_DEMAND_START%
ErrorControl   = %SERVICE_ERROR_NORMAL%
ServiceBinary  = %12%\bcm2836sdhc.sys
LoadOrderGroup = System Bus Extender
AddReg         = SDHCServiceReg

; ///////////////////////////////////////////////////////////
;
; Registry keys
;

[SDHCLocationReg]
HKR,,UINumberDescFormat,,%SDHCSlot%

[SDHCReg]
HKR,,Driver,,"bcm2836sdhc.sys"

[SDHCServiceReg]
HKR,,BootFlags,0x00010003,0x00000008
HKR,Parameters,SdCmdFlags,1,    05,01, 06,01, 08,11, 09,19, 0A,19, 0D,11, \
                                10,01, 11,01, 12,01, 17,01, 18,05, 19,05, \
                                1A,01, 1B,01, 1C,01, \
                                20,05, 21,05, 26,05, \
                                2A,01, \
                                34,02, 35,02, \
                                37,01, 38,01, \
                                22,01, 23,05, 24,01, 25,01

HKR,Parameters,SdAppCmdFlags,1, 06,01, 0D,01, 16,01, 17,01, 33,01, \
                                12,01, 19,01, 1A,01, 26,01, 2B,01, \
                                2C,01, 2D,01, 2E,01, 2F,01, 30,01, 31,01

; ///////////////////////////////////////////////////////////
;
; Copy Files
;

[CSCopyFiles]
bcm2836sdhc.sys,,,0x100

[DestinationDirs]
CSCopyFiles=12

; //////////////////////////////////////////////////////////
;
; Controller Specific Sections
;

;
; Standard host controller
;

[SDHost]
CopyFiles=CSCopyFiles
AddReg=SDHCReg

[SDHost.Services]
AddService = bcm2836sdhc, 2, sdhc_Service_Inst

[SDHost.HW]
AddReg=SDHCLocationReg

